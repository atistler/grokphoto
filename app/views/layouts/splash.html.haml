!!!
%html{ 'class' => 'no-js', :lang => 'en' }
  %head
    %meta{ :name => 'google-site-verification', :content => photographer.google_verification }
    %title= @meta_title.html_safe
    %meta{ :name => "keywords", :content => "#{@keywords || 'photographer, professional'}".html_safe }
    %meta{ :name => "description", :content => "#{@meta_description || 'Professional photographer.'}".html_safe }
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container#content
      = yield
    = render :partial => 'shared/footer'