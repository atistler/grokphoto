- content_for :title, @gallery.name
- content_for :keywords, @gallery.keywords
- content_for :description, truncate(@gallery.description, :length => 255)

- if @gallery.body
  .gallery-body
    = @gallery.body.to_html.html_safe
    %br
  
%ul.thumbnails
  - @gallery.photos.each do |photo|
    %li.span3
      = link_to(image_tag(photo.photo.thumb('260x173!').url, :size => '260x173'), photo.photo.url, :class => "thumbnail", :rel => 'lightbox')
